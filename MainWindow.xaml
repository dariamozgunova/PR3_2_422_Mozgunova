<Window x:Class="PR3_2_422_Mozgunova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3_2_422_Mozgunova"
        mc:Ignorable="d"
        Title="Площади фигур" Height="350" Width="450">
    <Grid>
        <Button Content="Вычислить" HorizontalAlignment="Left" Margin="303,141,0,0" VerticalAlignment="Top" Click="CalculateArea" Height="25" Width="95" />
        <TextBlock x:Name="ResultLabel" Text="Площадь =" Foreground="Red" Margin="28,146,176,146"/>
        <GroupBox Header="Вид фигуры" HorizontalAlignment="Right" Margin="0,29,36,200" Width="150">
            <StackPanel>
                <RadioButton x:Name="RectangleRadio" Content="Прямоугольник" Checked="FigureChoice"/>
                <RadioButton x:Name="CircleRadio" Content="Круг" Checked="FigureChoice"/>
                <RadioButton x:Name="TriangleRadio" Content="Треугольник" Checked="FigureChoice"/>
            </StackPanel>
        </GroupBox>

        <TextBlock x:Name="Side1" Visibility="Collapsed" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" Text="1-я сторона:" VerticalAlignment="Top"/>
        <TextBox x:Name="InputSide1" Visibility="Collapsed" HorizontalAlignment="Left" Margin="98,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Side2" Visibility="Collapsed" HorizontalAlignment="Left" Margin="10,74,0,0" TextWrapping="Wrap" Text="2-я сторона:" VerticalAlignment="Top"/>
        <TextBox x:Name="InputSide2" Visibility="Collapsed" HorizontalAlignment="Left" Margin="98,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Side3" Visibility="Collapsed" HorizontalAlignment="Left" Margin="10,110,0,0" TextWrapping="Wrap" Text="3-я сторона:" VerticalAlignment="Top"/>
        <TextBox x:Name="InputSide3" Visibility="Collapsed" HorizontalAlignment="Left" Margin="98,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Radius" Visibility="Collapsed" HorizontalAlignment="Left" Margin="28,35,0,0" TextWrapping="Wrap" Text="Радиус:" VerticalAlignment="Top"/>
        <TextBox x:Name="InputRadius" Visibility="Collapsed" HorizontalAlignment="Left" Margin="98,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
